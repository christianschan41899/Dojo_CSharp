<div class = "container">
    <div class = "row border-bottom border-dark mb-3">
        <h3 class = "col">Dojo Activity Center</h3>
        <div class = "col-3 d-flex justify-content-between">
            <a href="../home">Home</a>
            <a class = "col text-right" href="../logout">Log Out</a>
        </div>
    </div>
    @using ActModel.Models
    @model Act
    <form asp-controller="Home" method="POST">
        <div class = "row">
            <div class = "col">
                <span class = "text-danger" asp-validation-for="Title"></span>
                <div class="form-group form-inline row">
                    <label class="text-left col" asp-for="Title"></label>
                    <input class = "form-control col" asp-for="Title">
                </div>

                <span class = "text-danger" asp-validation-for="Date"></span>
                <div class="form-group form-inline row">
                    <label class="text-left col" asp-for="Date"></label>
                    <input class = "form-control col" asp-for="Date">
                </div>
            </div>
            <div class = "col">
                <span class = "text-danger" asp-validation-for="Time"></span>
                <div class="form-group form-inline row">
                    <label class="text-left col" asp-for="Time"></label>
                    <input class = "form-control col" asp-for="Time">
                </div>

                <span class = "text-danger" asp-validation-for="Duration"></span>
                <div class="form-group form-inline row">
                    <label class="text-left col" asp-for="Duration"></label>
                    <input class = "form-control col-3" asp-for="Duration">
                    <select class = "form-control col-3" asp-for="DurationUnit">
                        <option value="Hours">Hours</option>
                        <option value="Minutes">Minutes</option>
                        <option value="Days">Days</option>
                    </select>
                </div>
            </div>
        </div>
        <br/>
        <span class = "text-danger" asp-validation-for="Description"></span>
            <div class="form-group form-inline row align-text-top">
                <label class="text-justify col-2" asp-for="Description"></label>
                <textarea class = "form-control col" cols="25" rows="10" asp-for="Description"></textarea>
            </div>
        <div class="form-group form-inline row">
            <p class="col"></p>
            <button class="col-3" type="submit">Create Activity</button>
        </div>
        
    </form>
</div>