<div>
    <div class = "row">
        <div class = "col">
            <h3>Welcome to the Wedding Planner</h3>
        </div>
        <div class = "col">
            <a href="../dashboard">Dashboard</a>
            <a href="../logout">Log Out</a>
        </div>
    </div>
    @using WeddingModel.Models
    @model Wedding
    <form asp-controller="HomeController" asp-action="CreateWedding" method="POST">

        <span class = "text-danger" asp-validation-for="Wedder1"></span>
        <div class="form-group form-inline row">
            <label class="text-left col" asp-for="Wedder1"></label>
            <input class = "form-control col" asp-for="Wedder1">
        </div>

        <span class = "text-danger" asp-validation-for="Wedder2"></span>
        <div class="form-group form-inline row">
            <label class="text-left col" asp-for="Wedder2"></label>
            <input class = "form-control col" asp-for="Wedder2">
        </div>

        <span class = "text-danger" asp-validation-for="Date"></span>
        <div class="form-group form-inline row">
            <label class="text-left col" asp-for="Date"></label>
            <input class = "form-control col" asp-for="Date">
        </div>

        <span class = "text-danger" asp-validation-for="Address"></span>
        <div class="form-group form-inline row">
            <label class="text-left col" asp-for="Address"></label>
            <input class = "form-control col" asp-for="Address">
        </div>

        <div class="form-group form-inline row">
            <p class="col"></p>
            <button class="col" type="submit">Add Wedding</button>
        </div>

    </form>
</div>