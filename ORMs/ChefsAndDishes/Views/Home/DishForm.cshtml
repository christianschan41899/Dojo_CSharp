<div class = "container">
    <div class = "mx-auto text-center">
        <h4>Add a Dish!</h4>
    </div>
    <p><a href="../dishes">Home</a></p>
    @using ChefModel.Models
    @model Dish
    <form asp-action="CreateDish" asp-controller="HomeController" method="POST">
        <div class = "d-flex justify-content-start">
            <div class = "form-group col">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input class = "form-control" asp-for="Name">

                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories"></label>
                <input class = "form-control" asp-for="Calories">

                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea class = "form-control" asp-for="Description"></textarea>
            </div>

            <div class = "form-group col">
                <span asp-validation-for="ChefId"></span>
                <label asp-for="ChefId"></label>
                <select class = "form-control" asp-for="ChefId">
                    @{
                        foreach(var chef in ViewBag.Chefs)
                        {
                            <option value = "@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        }
                    }
                </select>
            </div>

            <div class = "form-group col">
                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness"></label>
                <select class = "form-control" asp-for="Tastiness">
                    <option value = "1"> 1 </option>
                    <option value = "1"> 2 </option>
                    <option value = "3"> 3 </option>
                    <option value = "4"> 4 </option>
                    <option value = "5"> 5 </option>
                </select>
            </div>
        </div>
        <button class="my-4" type="submit">Add Dish</button>
    </form>
</div>