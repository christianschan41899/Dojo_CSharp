<div class="container">
    <div class = "d-flex justify-content-between">
        <div class = "mx-auto">
            <h4><a href="..">Chefs</a> | Dishes</h4>
        </div>
        <a href="/dishes/new">Add a Dish</a>
    </div>
    <div class = "border-bottom border-dark w-50">
        <p> Yum, take a look at our tasty dishes! </p>
    </div>
    @using ChefModel.Models
    <table class = "table my-2 table-striped">
        <thead>
            <tr class = "table-active">
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var dish in ViewBag.Dishes)
                {
                    <tr>
                        <td>@dish.Name</td>
                        <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                        <td>@dish.Tastiness</td>
                        <td>@dish.Calories</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
