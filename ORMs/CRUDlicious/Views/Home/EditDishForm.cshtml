<div class = "container">
    @using DishModel.Models
    @model Dish
    <h3 class = "text-center">Editing @Model.Name</h3>
    <a href = "..">Home</a>
    @{string updateAction = $"/edit/{Model.DishId}";}
    <form asp-controller="HomeController" asp-route-id=@updateAction method="POST">

        <div class = "d-flex justify-content-between">
            <div class = "form-group col w-25">
                <span asp-validation-for="Chef"></span>
                <label asp-for="Chef"></label>
                <input class = "form-control" asp-for="Chef" value=@Model.Chef>

                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input class = "form-control" asp-for="Name" value=@Model.Name>

                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories"></label>
                <input class = "form-control" asp-for="Calories" value=@Model.Calories>
            </div>

            <div class = "form-group col w-25">
                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness"></label>
                <select class = "form-control" asp-for="Tastiness">
                    <option selected value = "@Model.Tastiness"> @Model.Tastiness </option>
                    <option value = "1"> 1 </option>
                    <option value = "1"> 2 </option>
                    <option value = "3"> 3 </option>
                    <option value = "4"> 4 </option>
                    <option value = "5"> 5 </option>
                </select>
            </div>

            <div class = "form-group col w-25">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea class = "form-control" asp-for="Description" rows="7">@Model.Description</textarea>

                <button class="mt-2" type="submit">Edit Dish</button>
            </div>
        </div>
        
    </form>
</div>